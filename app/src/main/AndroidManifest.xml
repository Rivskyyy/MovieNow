<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.RivskyInc.movienow">

    <uses-permission android:name="android.permission.INTERNET" />

    <application


        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_mv"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_mv_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieNow"
        tools:targetApi="31">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-7124048404999597~2429109838"/>
        <activity
            android:name=".presentation.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>


        </activity>
        <activity
            android:name=".presentation.InfoActivity"
            android:exported="false" />
        <activity
            android:name="com.RivskyInc.movienow.presentation.FavouriteMoviesActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.MovieDetailActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.FindMovieActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.MainActivity"
            android:exported="false"
            >

        </activity>
    </application>

</manifest>