                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageButton
                    android:id="@+id/button_comedy"
                    android:layout_width="393dp"
                    android:layout_height="207dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/invincible"
                    android:src="@drawable/button_comedy"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.547"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.517" />
                <TextView
                    android:layout_width="361dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="@string/comedy"
                    android:textStyle="bold"
                    android:textColor="@color/red_another_palette"
                    android:textSize="50sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageButton
                    android:id="@+id/button_drama"
                    android:layout_width="393dp"
                    android:layout_height="207dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/invincible"
                    android:src="@drawable/button_drama"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.547"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.517" />
                <TextView
                    android:layout_width="361dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="@string/drama"
                    android:textStyle="bold"
                    android:textColor="@color/red_another_palette"
                    android:textSize="50sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageButton
                    android:id="@+id/button_fantasy"
                    android:layout_width="393dp"
                    android:layout_height="207dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/invincible"
                    android:src="@drawable/fantasy_button"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.547"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.517" />
                <TextView
                    android:layout_width="361dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="@string/fantasy"
                    android:textStyle="bold"
                    android:textColor="@color/red_another_palette"
                    android:textSize="50sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageButton
                    android:id="@+id/button_animation"
                    android:layout_width="393dp"
                    android:layout_height="207dp"
                    android:layout_gravity="center"

                    android:backgroundTint="@color/invincible"
                    android:src="@drawable/button_cartoons"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.547"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.517" />
                <TextView
                    android:layout_width="361dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="@string/cartoons"
                    android:textStyle="bold"
                    android:textColor="@color/red_another_palette"
                    android:textSize="50sp" />

            </LinearLayout>

                <!--<TextView-->
                <!--    android:id="@+id/textViewGenre"-->
                <!--    android:layout_width="393dp"-->
                <!--    android:layout_height="222dp"-->
                <!--    android:text="TEXT"-->
                <!--    android:gravity="center"-->
                <!--    android:layout_gravity="center"-->
                <!--    android:textColor="@color/red"-->
                <!--    android:textSize="50sp"-->
                <!--    />-->


            </LinearLayout>

        </HorizontalScrollView>


    </LinearLayout>


